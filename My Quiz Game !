print("welcome to my Quiz Game !")

playing = input("Do you want to play? ")

if playing.lower() != "yes":
    quit()

print("Okay Let's Play :)")
score = 0
## Quations n Answers Starts from Here !!

answer = input("What Does CPU Stands For? ")
if answer.lower() == "central processing unit":
    print("correct!")
    score += 1
else:
    print("Oops Your Wrong :( )")

answer = input("What Does GPU Stans For? ")
if answer.lower() == "graphics processing unit":
    print("correct!")
    score += 1
else:
    print("Oops Your Wrong :( )")

answer = input("Who Develops Python? ")
if answer.lower() == "guido van rossum":
    print("correct!")
    score += 1
else:
    print("Oops Your Wrong :( )")

answer = input("What Does HTML Stands For? ")
if answer.lower() == "hypertext markup language":
    print("correct!")
    score += 1
else:
    print("Oops Your Wrong :( )")

answer = input("What Does RAM Stands For? ")
if answer.lower() == "random access memory":
    print("correct!")
    score += 1
else:
    print("Oops Your Wrong :( )")

print("You Got" + str(score) + "Questions Correct! ")
print("WOW You Got" + str((score / 4) * 100) + "%")
